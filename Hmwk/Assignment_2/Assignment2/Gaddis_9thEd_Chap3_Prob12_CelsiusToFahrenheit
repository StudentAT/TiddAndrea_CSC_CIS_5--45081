#include <iostream>

using namespace std;

int main(int argc, char** argv) 
{
    double Celsius, Fahrenheit;
    
    Fahrenheit = (9 * Celsius)/5 + 32;
    
    cout << "What is the temperature in Celsius? ";
    cin >> Celsius;
    
    cout << "The temperature in Fahrenheit is ";
    cout << (9 * Celsius)/5 + 32;

    return 0;
}

