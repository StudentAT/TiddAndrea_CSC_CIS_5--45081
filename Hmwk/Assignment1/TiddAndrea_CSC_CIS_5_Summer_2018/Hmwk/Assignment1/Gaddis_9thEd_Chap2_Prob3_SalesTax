#include <iostream>

using namespace std;

int main(int argc, char** argv) 
{
    double statetax = 0.04;  // 4 percent
    double countytax = 0.02; // 2 percent
    double purchase = 95,    // 95 dollars
           total = statetax + countytax;

    statetax = purchase * statetax;
    countytax = purchase * countytax;
    total = statetax + countytax;

    cout << total << endl;
    
    return 0;
}

